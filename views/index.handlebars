<div class="burger image text-center">
          <img src="https://img.pngio.com/burger-png-images-transparent-free-download-pngmartcom-cheeseburger-transparent-background-512_512.png" width="300" height="300" alt="burger image">
      </div>
    <div class="jumbotron text-center" >
        <h1 class="display-1">Eat Da Burger!</h1>
      </div>

<h2>Burgers that are not eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are eaten</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eat=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> Eaten!<br>
    <input type="radio" name="eaten" value="0"> Not Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
